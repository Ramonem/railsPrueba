<div class="review-rating" data-score="<%= review.rating %>"></div>
<p><%=review.comment%></p>

<%if user_signed_in?%>
  <%if review.user_id == current_user.id%>
    <%= link_to "Edit review", edit_book_review_path(review.book, review)%>
    <%= link_to "Delete review", book_review_path(review.book, review), method: :delete, data: {confirm: "Sure to delete your review?"}%>
  <%end%>
<%end%>
